<div class="mt-4">
  <h3>Đăng kí khóa học</h3>

  <form method="POST" action="/courses/store">
    <div class="form-group mt-4">
      <label for="description">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Enter name"
      />
    </div>

    <div class="form-group mt-4">
      <label for="description">Description</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        placeholder="Enter text"
      />

    </div>
    <div class="form-group mt-4">
      <label for="videoId">Video</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
        placeholder="Enter text"
      />

    </div>

    <div class="form-group mt-4">
      <label for="level">Level</label>
      <input
        type="text"
        class="form-control"
        id="level"
        name="level"
        placeholder="Enter text"
      />

    </div>

    <button type="submit" class="btn btn-primary mt-4">Thêm khóa học</button>
  </form>
</div>